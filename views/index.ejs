<%- include('../views/partials/header'); -%>

<div class="row">
    <div class="col-md-6">
        <form method="post" action="/todo/add">
            <div class="form-group">
                <label>Todo Name</label>
                <input class="form-control" type="text" name="head" placeholder="Todo Name">
            </div>
    
            <div class="form-group">
                <label>Todo Body</label>
                <textarea type="text" class="form-control" name="text" placeholder="Add Body"></textarea>
            </div>
            <br>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>

    <div class="col-md-6">
        <ol class="list-group">
            <% todos.forEach(function(todo){ %>
                <li class="list-group-item">
                    <%= todo.head %> - <%= todo.text %> 
                    <br />
                    <a class="btn btn-primary mt-3" href="/todo/edit/<%= todo._id %>" >Edit</a>
                    <a href="#" data-id="<%= todo._id %>" class="delete-todo btn btn-danger mt-3 ms-3">Delete</a>
                </li>
            <% }) %>
           </ol>
    </div>
</div>
    
   
<%- include('../views/partials/footer'); -%>